# Define coding styles for editors.
# See: https://editorconfig.org/#file-format-details
# See: https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.csv]  # For tab-separated files.
indent_size = 50
indent_style = tab
